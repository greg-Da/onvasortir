
<h1 class="text-center">Events</h1>



<div id="events" class="row justify-content-center">
  <% @events.each do |event| %>
    <div class="card col-3 mx-3 mt-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title text-center"> <%= event.title %></h5>
        <small class="fw-bold text-info"> <%= event.start_date %></small>
        <p class="card-text truncate"><%= event.description %></p>
        <div class="d-flex justify-content-between">
        <small><%= event.price %>â‚¬</small>
        <small><%= event.location %></small>
        </div>
          <div class="d-flex justify-content-center">
            <%= link_to "Show this event", event, class:"btn btn-primary" %>
          </div>
      </div>
    </div>

  <% end %>
</div>

