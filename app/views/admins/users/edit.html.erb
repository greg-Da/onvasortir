<h1>Editing user</h1>

<%= form_with(url: admins_user_path(@user), method: "patch", scope: :user) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.file_field :avatar,
    placeholder: 'Upload picture',
    autocomplete: "avatar",
    direct_upload: true
    %>
  </div>

  <div class="field mt-3">
    <%= form.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mt-3">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= form.label :is_admin %>
    <%= form.check_box :is_admin  %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>


<br>

<div>
  <%= link_to "Show this user", admins_user_path(@user) %> |
  <%= link_to "Back to users", admins_users_path %>
</div>
